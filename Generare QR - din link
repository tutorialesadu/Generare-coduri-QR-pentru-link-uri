<body>

  <div class="card">
    <h2>Generator Cod QR </h2>
    <input id="url" placeholder="Introdu linkul (ex: https://youtube.com)" />
    <button onclick="gen()">Generează QR</button>

    <div class="qr-area" id="area" style="display:none">
      <img id="qr" width="300" alt="QR Code" />
      <br>
      <a id="dl" download="qrcode.png">Descarcă imaginea</a>
    </div>
  </div>

<script>
function gen(){
  const u = document.getElementById('url').value.trim();
  if(!u){ alert('Te rog introdu un link.'); return; }
  const encoded = encodeURIComponent(u);
  const src = `https://quickchart.io/qr?text=${encoded}&size=300`;
  document.getElementById('qr').src = src;
  document.getElementById('dl').href = src;
  document.getElementById('area').style.display = 'block';
}
</script>

